int gen_random()  // Functia care genereaza cartile ..
{
	int x, y;
	srand(time(0));
	x = rand() % 4 + 1;
	srand(time(0));
	y = rand() % 13 + 1;
	return y * 10 + x;

}

int main()
{
titlu();
return 0;
}
